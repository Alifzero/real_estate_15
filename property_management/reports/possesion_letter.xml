<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="report_possession_letter">
    <t t-call="web.external_layout">
				<t t-set="o" t-value="o.with_context(lang=lang)" />
				<div class="page">
				<div style="opacity: 1;z-index: 1000;width: 100%;text-align:center;padding:0px;margin:0px;">
					<img src='/property_management/static/src/img/possession_letter.JPG' style="position:absolute;text-align:center;vertical-align:center;width:100%;opacity:1;z-index:-1000;"/>
				</div>
				<table style="width:100%;">
		            <tr>
		               <td style="padding-left:700px;padding-top: 30px;">
		                     <img alt="barcode" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.name, 600, 120)" style="max-height:50pt;max-width:100%;"/>
		               </td>
		           </tr>
				   <tr>
		               <td style="padding-left:790px;"><span t-field="o.name"/></td>
		           </tr>
		     	</table>
				<table style="width:100%;">
					<tr>
                        <td style="padding-left:810px;padding-top:268px;width:100%;font-size: 18px;font-family:Arial;"><span t-esc="datetime.datetime.now().strftime('%d/%m/%Y')"/></td>
					</tr>
				</table>
				<table style="width:100%;">
					<tr>
                        <td style="padding-left:115px;padding-top:68px;width:100%;font-size: 18px;font-family:Arial;"><span t-field="o.contract_partner_id"/></td>
					</tr>
				</table>
				<table style="width:100%;">
					<tr >
                        <td style="padding-left:300px;padding-top:15px;width:100%;font-size: 18px;font-family:Arial;"><span t-field="o.contract_partner_id.so_do_wo"/></td>
						
					</tr>
				</table>
				<table style="width:100%;">
					<tr >
                        <td style="padding-left:110px;padding-top:8px;width:100%;font-size: 18px;font-family:Arial;"><span t-field="o.contract_partner_cnic"/></td>
					</tr>
				</table>
				<table style="width:100%;">
					<tr>
                        <td style="padding-left:135px;padding-top:10px;width:100%;font-size: 18px;font-family:Arial;"><span/><span t-field="o.contract_partner_mobile"/></td>
					</tr>
				</table>
				<table style="width:100%;">
					<tr >
                        <td style="padding-left:260px;padding-top:10px;width:100%;font-size: 18px;font-family:Arial;"><span t-field="o.contract_partner_street"/></td>
					</tr>
				</table>
				<table style="width:100%;">
					<tr >
                        <td style="padding-left:170px;padding-top:35px;width:40%;font-size: 18px;font-family:Arial;"><span t-field="o.plot_id"/></td>
						<td style="padding-left:50px;padding-top:35px;width:30%;font-size: 18px;font-family:Arial;"><span t-field="o.plot_id.size"/></td>
						<td style="padding-left:70px;padding-top:35px;width:30%;font-size: 18px;font-family:Arial;"><span t-field="o.plot_id.category_id"/></td>
					</tr>
				</table>
				<table style="width:100%;">
					<tr >
                        <td style="padding-left:150px;padding-top:15px;width:100%;font-size: 18px;font-family:Arial;"><span t-field="o.project_id.location"/></td>
					</tr>
				</table>
				<table style="width:100%;">
					<tr >
                        <td style="padding-left:280px;padding-top:106px;width:100%;font-size: 18px;font-family:Arial;"><span t-field="o.project_id"/></td>
					</tr>
				</table>
				
			</div>
			
    </t>
<!--	</div>-->
</template>

<template id="possession_letter">
    <t t-call="web.html_container">
		<t t-foreach="docs" t-as="o">
            <t t-set="lang" t-value="o.contract_partner_id.lang"/>
            <t t-call="property_management.report_possession_letter" t-lang="lang"/>
        </t>
    </t>
</template>

<report
        id="action_possession_letter"
        string="Possession Letter"
        model="real.estate.contract"
        report_type="qweb-pdf"
        name="property_management.possession_letter"
        file="property_management.report_possession_letter"
		print_report_name="('Possession Letter')">

</report>

</odoo>
